<% layout('./layouts/boilerplate') -%>
<body>
    <div class="row">
        <div class="col-8">
        <h1>Edit Listing</h1>
        <br><br>
        <form action="/listings/<%=listing._id  %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Name</label>
                <input type="text" name="listing[title]" id="" class="form-control"  value="<%= listing.title %>">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" id="" class="form-control" value=""><%= listing.description %></textarea>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">price</label>
                <input type="number" name="listing[price]" id="" class="form-control" value="<%= listing.price %>">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="file" name="listing[image]" id="" class="form-control">
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" id="" class="form-control" value="<%= listing.country %>">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="country" class="form-label">Location</label>
                    <input type="text" name="listing[location]" id="" class="form-control" value="<%= listing.location %>">
                </div>
            </div>
            <input type="submit" name="" id="" value="edit" class="btn mt-3 bg-bnb">
        </form>
    </div>
    </div>
   
</body>

